<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/blogDetails"
tools:context=".diseases.DieseasesDetails"
android:background="@color/white">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        app:titleTextColor="@color/white"
        app:subtitleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="Disease Information"
        android:id="@+id/toolbar" />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/dis_video"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/toolbar"
        android:background="@drawable/rn_logo_title"
        android:backgroundTint="@color/colorPrimary"

        />

    <TextView
        android:id="@+id/dis_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Disease Name"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:layout_below="@+id/dis_video" />

    <TextView
        android:id="@+id/tv_symptoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Symptoms"
        android:textSize="16sp"
        android:layout_below="@+id/dis_name" />

    <TextView
        android:id="@+id/dis_symptoms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/work_sans"
        android:text="Symptoms"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_below="@+id/tv_symptoms" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:text="Description"
        android:textSize="16sp"

        android:layout_below="@+id/dis_symptoms" />
    <TextView
        android:id="@+id/dis_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="24dp"
        android:text="Description"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@id/tv_description"
        app:lineHeight="28dp" />

    <TextView
        android:id="@+id/tv_medicines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:text="Medicines"
        android:textSize="16sp"
        android:layout_below="@id/dis_description"
        app:lineHeight="28dp" />


    <TextView
        android:id="@+id/dis_medicines"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="24dp"
        android:text="Medicines"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@id/tv_medicines"
        app:lineHeight="28dp" />

    <TextView
        android:id="@+id/tv_precautions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:text="Precautions"
        android:textSize="16sp"
        android:layout_below="@id/dis_medicines"
        app:lineHeight="28dp" />


    <TextView
        android:id="@+id/dis_precautions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="24dp"
        android:text="Precautions"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@id/tv_precautions"
        app:lineHeight="28dp" />


</RelativeLayout>

</ScrollView>