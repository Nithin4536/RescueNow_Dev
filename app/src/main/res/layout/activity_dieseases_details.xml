<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:id="@+id/blogDetails"
tools:context=".diseases.DieseasesDetails"
android:background="@color/white">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/dis_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_account"
        />

    <TextView
        android:id="@+id/dis_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Disease Name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="27sp"
        android:layout_below="@+id/dis_image" />



    <TextView
        android:id="@+id/dis_symptoms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Symptoms"
        android:textSize="16sp"
        android:layout_below="@+id/dis_name" />

    <TextView
        android:id="@+id/dis_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Description"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@id/dis_symptoms"
        app:lineHeight="28dp" />

    <TextView
        android:id="@+id/dis_precautions"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:text="Precautions"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_below="@id/dis_description"
        app:lineHeight="28dp" />





</RelativeLayout>

</ScrollView>